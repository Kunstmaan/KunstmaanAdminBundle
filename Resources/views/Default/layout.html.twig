    <script src="{{ asset('bundles/kunstmaanadmin/js/libs/bootstrap-popover.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kunstmaanadmin/js/libs/bootstrap-modal.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kunstmaanadmin/js/libs/bootstrap-dropdown.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kunstmaanadmin/js/libs/bootstrap-buttons.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kunstmaanadmin/js/libs/bootstrap-alerts.js') }}" type="text/javascript"></script>
