    <script src="{{ asset('bundles/kunstmaanadmin/js/libs/jquery.jstree.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kunstmaanadmin/js/libs/jquery.ui.widget.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kunstmaanadmin/js/libs/jquery.datePicker.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kunstmaanadmin/js/libs/modaldialog.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kunstmaanadmin/js/plugins.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kunstmaanadmin/js/script.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kunstmaanadmin/js/upload.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/kunstmaanadmin/js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
    <script type="text/javascript" src="{{ asset('bundles/kunstmaanadmin/js/ckeditor/adapters/jquery.js') }}"></script>
    <script type=text/javascript>
    	$(document).ready(function () {
			init_tree("{{ path('KunstmaanAdminBundle_pages_movenodes') }}", "{% if mediabundleisset is defined %}{{ path('KunstmaanMediaBundle_folder_movenodes') }}{% else %}/movenodes{% endif %}");
        });
    
    	CKEDITOR.editorConfig = function( config )
    	{
    		config.skin = 'kCK';
    	    config.startupFocus = false;
    	    config.height = 500;
        	config.filebrowserBrowseUrl = '{{ path('KunstmaanAdminBundle_ckselecturl') }}'
        	config.filebrowserWindowWidth = '580'
        {% if mediabundleisset is defined %}
        	config.filebrowserImageBrowseUrl = '{{ path('KunstmaanMediaBundle_chooser_ckeditor') }}';
        	config.filebrowserImageBrowseLinkUrl = '{{ path('KunstmaanMediaBundle_chooser_ckeditor') }}';
        	config.filebrowserImageWindowWidth = '900';
        {% else %}
        	config.filebrowserImageBrowseUrl = '';
    		config.filebrowserImageBrowseLinkUrl = '';
        {% endif %}
       		config.filebrowserImageUploadUrl = '';
            config.toolbar_Full =
                    [
                        { name: 'basicstyles', items : [ 'Bold','Italic','Underline','Strike', '-', 'Subscript','Superscript' ] },
                        { name: 'lists', items : [ 'NumberedList','BulletedList' ] },
                        { name: 'dents', items : [ 'Outdent','Indent' ] },
                        { name: 'links', items : [ 'Link','Unlink' ] },
                        { name: 'insert', items : [ 'Image', 'SpecialChar' ] },
                        { name: 'format', items : [ 'Format' ] },
                        { name: 'clipboard', items : [ 'Cut','Copy','Paste','PasteText','PasteFromWord','-','Undo','Redo' ] },
                        { name: 'editing', items : [ 'Find','Replace','-','SelectAll', 'RemoveFormat' ] },
                        { name: 'document', items : [ 'Source' ] }
                    ];
    	};
	    CKEDITOR.replaceClass = 'rich_editor';
	</script>
	{% block extrajavascript %}{% endblock %}
    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/apple-touch-icon-114x114.png">
  </head>
  <body {% block extraparamsinbody %}{% endblock %}>{% block body %}
  <header>
    <div class="topbar" data-dropdown="dropdown">
      <div class="topbar-inner">
        <div class="container-fluid">
          <a class="brand" href="{{ path('KunstmaanAdminBundle_homepage') }}">{{ websitetitle | trans }}</a>
          <nav>
          {{ knp_menu_render('main', { 'currentClass': 'active' }) }}
          <ul class="nav secondary-nav">
          	<!-- <li class="dropdown">
				<a href="#" class="dropdown-toggle">Tooltips On</a>
				<ul class="dropdown-menu">
					<li><a href="#">Tooltips Off</a></li>
				</ul>
			</li>-->
          	{% set route = app.request.attributes.get('_route') %}
            {{ app.request.attributes.remove('_route') }}
            {% set attribs = app.request.attributes.all %}
            {{ localeswitcher_widget(requiredlocales, route) }}
          	<li {% if route == 'KunstmaanAdminBundle_settings_users_edit' %}class="active"{% endif %}><a href="{{ path('KunstmaanAdminBundle_settings_users_edit', { 'user_id' : app.user.id }) }}">{{ 'layout.logged_in_as'|trans({'%username%':app.user.username}, 'FOSUserBundle') }}</a></li>
          	<li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
          </ul>
          </nav>
        </div>
      </div>
    </div>
    </header>
    <div class="container-fluid">
      <aside class="sidebar">
	      {% block sidebar %} {% endblock %}
      </aside>
      <div class="content">
      	{% block breadcrumb %} {% endblock %}
        {% block content %} {% endblock %}
      </div>
    </div>
      <footer>
        <div class="container-fluid">
          <p class="pull-right"><a target="_blank" href="http://www.kunstmaan.be"><img src="{{ asset('bundles/kunstmaanadmin/img/general/kunstmaan.png') }}" alt="Kunstmaan" class="kunstmaan-logo" /></a></p>
        </div>
      </footer>
  {% endblock %}</body>
</html>