  <body {% block extraparamsinbody %}{% endblock %}>{% block body %}
  <header>
    <div class="topbar" data-dropdown="dropdown">
      <div class="topbar-inner">
        <div class="container-fluid">
          <a class="brand" href="{{ path('KunstmaanAdminBundle_homepage') }}">{{ websitetitle | trans }}</a>
          <nav>
          <ul class="nav">
            {% for menuitem in adminmenu.topchildren %}
                {% set topchildren = menuitem.topchildren %}
                {% if topchildren | length > 0 %}
                    <li class="dropdown {% if menuitem.active %} active {% endif %} {% if loop.first %} first {% endif %} {% if loop.last %} last {% endif %}">
                       <a class="dropdown-toggle" href="{{ path(menuitem.route, menuitem.routeparams) }}">{{ menuitem.internalname | trans }}</a>
                       <ul class="dropdown-menu">
                            {% for topchild in topchildren %}
                                <li class="{% if topchild.active %} active {% endif %} {% if loop.first %} first {% endif %} {% if loop.last %} last {% endif %}"><a href="{{ path(topchild.route, topchild.routeparams) }}">{{ topchild.internalname | trans }}</a></li>
                            {% endfor %}
                        </ul>
                    </li>
                {% else %}
                    <li class="{% if menuitem.active %} active {% endif %} {% if loop.first %} first {% endif %} {% if loop.last %} last {% endif %}">
                       <a href="{{ path(menuitem.route, menuitem.routeparams) }}">{{ menuitem.internalname | trans }}</a>
                    </li>
                {% endif %}
            {% endfor %}
          </ul>
          <ul class="nav secondary-nav">
              <!-- <li class="dropdown">
                <a href="#" class="dropdown-toggle">Tooltips On</a>
                <ul class="dropdown-menu">
                    <li><a href="#">Tooltips Off</a></li>
                </ul>
            </li>-->
              {% set route = app.request.attributes.get('_route') %}
            {% set attribs = app.request.attributes.all %}
            {{ localeswitcher_widget(requiredlocales, route) }}
              <li {% if route == 'KunstmaanAdminBundle_settings_users_edit' %}class="active"{% endif %}><a href="{{ path('KunstmaanAdminBundle_settings_users_edit', { 'user_id' : app.user.id }) }}">{{ 'layout.logged_in_as'|trans({'%username%':app.user.username}, 'FOSUserBundle') }}</a></li>
              <li><a href="{{ path('fos_user_security_logout') }}">{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
          </ul>
          </nav>
        </div>
      </div>
    </div>
    </header>
    <div class="container-fluid">
      {% block sidebar %}
          {% include "KunstmaanAdminBundle:Default:sidebar.html.twig" %}
      {% endblock %}
      <div class="content">
          {% block breadcrumb %}
              {% set breadcrumbitems = adminmenu.breadcrumb %}
              {% if breadcrumbitems | length > 0 %}
                  <ul class="breadcrumb">
                      <li><a href="{{ path('KunstmaanAdminBundle_homepage') }}">{{ 'omnext.home' | trans }}</a></li>
                      {% for breadcrumbitem in breadcrumbitems %}
                          {% if loop.last %}
                              <li class="active">{{ breadcrumbitem.internalname | trans }}</li>
                          {% else %}
                              <li><a href="{{ path(breadcrumbitem.route, breadcrumbitem.routeparams) }}">{{ breadcrumbitem.internalname | trans }}</a></li>
                          {% endif %}
                      {% endfor %}
                </ul>
              {% endif %}
          {% endblock %}
          {% block header %}
              {% if adminmenu.current %}
                  <div class="page-header">
                    <h1>{{ adminmenu.current.internalname | trans }} {% block page_header_addition %}{% endblock %}</h1>
                </div>
            {% endif %}
          {% endblock %}
        {% block content %} {% endblock %}
      </div>
    </div>
      <footer>
        <div class="container-fluid">
          <p class="pull-right"><a target="_blank" href="http://www.kunstmaan.be"><img src="{{ asset('bundles/kunstmaanadmin/img/general/kunstmaan.png') }}" alt="Kunstmaan" class="kunstmaan-logo" /></a></p>
        </div>
