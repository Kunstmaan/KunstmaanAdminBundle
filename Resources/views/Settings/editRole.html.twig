{% extends 'KunstmaanAdminBundle:Settings:index.html.twig' %}

{% block subbreadcrumb %}
	<li><a href="{{ path('KunstmaanAdminBundle_settings') }}">{{ 'settings.title' | trans }}</a></li>
    <li><a href="{{ path('KunstmaanAdminBundle_settings_roles') }}">{{ 'settings.roles' | trans }}</a></li>
	<li class="active">{{ 'settings.role.edit' | trans }}</li>
{% endblock %}

{% block content %}

    {% form_theme form 'KunstmaanAdminBundle:Form:fields.html.twig' %}
    <form class="form-horizontal" action="{{ path('KunstmaanAdminBundle_settings_roles_edit', { 'id' : role.id }) }}" method="post" {{ form_enctype(form) }} novalidate >
    <fieldset>
        {{ form_rest(form) }}
        <div class="form-actions">
            <button class="btn btn-primary" type="submit">{{ 'settings.role.edit' | trans }}</button>
            <button onclick="window.location = '{{ path('KunstmaanAdminBundle_settings_roles') }}'" type="reset" class="btn">{{ 'form.cancel' | trans }}</button>
        </div>
    </fieldset>
</form>

{% endblock %}
