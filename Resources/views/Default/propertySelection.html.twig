{% extends 'KunstmaanAdminBundle:Default:layout.html.twig' %}

{% block header %}{% endblock %}

{% block content %}
<form method="post" action="">
    <h2>Dashboard setup</h2>
    <h3>Step 4: Select a website to track</h3>
    <p>Select a domain registered in your google analytics account.</p>

    <select name="properties">
        {% for property in properties %}
            <option value="{{ property.propertyId }}::{{ property.accountId }}">{{ property.propertyName }}</option>
        {% endfor %}
    </select>
<br/>
    <button class="btn btn-primary" type="submit">Save</button>
</form>

{% endblock %}
